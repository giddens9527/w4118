<h1>Listing positions</h1>

<table>
  <tr>
    <th>Position</th>
    <th>Position name</th>
    <th>Company</th>
    <th>Category</th>
    <th>Type</th>
    <th>Deadline</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @positions.each do |position| %>
  <tr>
    <td><%= position.position_id %></td>
    <td><%= position.position_name %></td>
    <td><%= position.company_id %></td>
    <td><%= position.category %></td>
    <td><%= position.type %></td>
    <td><%= position.deadline %></td>
    <td><%= link_to 'Show', position %></td>
    <td><%= link_to 'Edit', edit_position_path(position) %></td>
    <td><%= link_to 'Destroy', position, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

