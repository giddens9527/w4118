<div class="field">
	<%= f.label :major %>
	<%= f.text_field :major %>
</div>	
<div class="field">
	<%= f.label :degree %>
	<%= f.text_field :degree %>
</div>	
<div class="field">
	<%= f.label :Year_of_Graduation %>
	<%= f.text_field :year_of_graduation %>
</div>	
